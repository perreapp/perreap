{{!-- {{#with user}} --}}
<p>Hello {{user.username}}, welcome to hell</p>

<h2>Edit your f***** profile</h2>

{{#if message}}
{{message}}
{{/if}}

<form action="/user/edit/{{user._id}}" method="POST" enctype="multipart/form-data" id="form-container">


  <label>Your Profile Picture</label>
  <br><br>
  <img src="{{user.photo}}" alt="user picture">
  <br><br>
  <input type="file" name="photo">

  <br><br><br>
  <label for="username">Username</label>
  <input id="username" type="text" name="username" value="{{user.username}}">

  <br><br>

  <label for="password">Password</label>
  <input id="password" type="password" name="password" value="{{user.password}}">


  <br><br>

  <label for="firstName">First Name</label>
  <input id="firstName" type="text" name="firstName" value="{{user.firstName}}">

  <br><br>

  <label for="lastName">Last Name</label>
  <input id="lastName" type="text" name="lastName" value="{{user.lastName}}">

  <br><br>

  <label for="birthDate">Date of Birth</label>
  <input id="birthDate" type="date" name="birthDate" value="{{user.birthDate}}">

  <br><br>

  <label for="email">Email</label>
  <input id="email" type="text" name="email" placeholder="Your email">

  <br><br>

  <label for="role">Choose Student / Teacher</label>

  <select name="role">
    <option value="" selected="{{user.group}}">--Please choose an option--</option>
    <option value=" student">Student</option>
    <option value="teacher">Teacher</option>
  </select>

  <br><br>

  <label for="group">Choose your Class</label>

  <select name="group">
    <option value="">--Please choose an option--</option>
    <option value="web042019">web042019</option>
    <option value="web062019">web062019</option>
  </select>

  <br><br>



  {{#if message }}
  <div class="error-message">{{ message }}</div>
  {{/if}}

  <br><br>

  <button type="submit">Submit Changes</button>

  {{!-- {{/with}} --}}







  <p class="account-message">
    Do you already have an account?
    <a href="/auth/login">Login</a>
  </p>
</form>